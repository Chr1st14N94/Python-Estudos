def leiaint(a):
    a = input(a)
    while True:
        if a.isnumeric():
            return a
        else:
            print('\033[31mErro! Digite um número inteiro válido.\033[m')
            a = input('Digite um número: ')


n = leiaint('Digite um número: ')
print(f'Você acabou de digitar o número {n}')
